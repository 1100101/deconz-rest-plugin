{
    "schema": "devcap1.schema.json",
    "manufacturer": "$MF_TUYA",
    "modelid": ["RH3040"],
    "product": "ESS-SI-PIR-6101",
    "subdevices": [
        {
            "type": "$TYPE_PRESENCE_SENSOR",
            "restapi": "/sensors",
            "uuid": [ "$address.ext", "0x01", "0x0500"],
            "fingerprint": { "profile": "0x0104", "device": "0x0402", "endpoint": "0x01", "in": ["0x0001", "0x0500"] },
            "items": [
                {
                    "name": "config/battery",
                    "parse": ["parseGenericAttribute/4", 1, "0x0001", "0x0021", "$raw"],
                    "awake": true
                },
                {
                    "name": "config/duration",
                    "default": 120,
                },
                {
                    "name": "state/presence",
                    "awake": true
                }
            ]
        }
    ]
}