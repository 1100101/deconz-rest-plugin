{
  "schema": "devcap1.schema.json",
  "manufacturername": ["$MF_SIGNIFY", "$MF_PHILIPS"],
  "modelid": [
    "LCA006", "LCE002", "LCG002", "LCL003",
    "929002375901", "929003053301_01", "929003053301_02"
  ],
  "product": "Hue white and color ambiance light",
  "sleeper": false,
  "status": "Gold",
  "subdevices": [
    {
      "type": "$TYPE_EXTENDED_COLOR_LIGHT",
      "restapi": "/lights",
      "uuid": [
        "$address.ext",
        "0x0b"
      ],
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion"
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "cap/color/gamut/blue/x"
        },
        {
          "name": "cap/color/gamut/blue/y"
        },
        {
          "name": "cap/color/gamut/green/x"
        },
        {
          "name": "cap/color/gamut/green/y"
        },
        {
          "name": "cap/color/gamut/red/x"
        },
        {
          "name": "cap/color/gamut/red/y"
        },
        {
          "name": "cap/color/gamut_type"
        },
        {
          "name": "config/colorcapabilities"
        },
        {
          "name": "config/ctmax"
        },
        {
          "name": "config/ctmin"
        },
        {
          "name": "config/startup/bri"
        },
        {
          "name": "config/startup/ct"
        },
        {
          "name": "config/startup/on"
        },
        {
          "name": "config/startup/x"
        },
        {
          "name": "config/startup/y"
        },
        {
         "name": "state/alert"
        },
        {
          "name": "state/on",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002",
            "script": "fc03_state.js"
          },
          "read": { "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002" },
          "refresh.interval": 305
        },
        {
          "name": "state/bri",
          "read": { "fn": "none" }
        },
        {
          "name": "state/ct",
          "read": { "fn": "none" }
        },
        {
          "name": "state/x",
          "read": { "fn": "none" }
        },
        {
          "name": "state/y",
          "read": { "fn": "none" }
        },
        {
          "name": "state/colormode",
          "values": [
            ["\"ct\"", "color temperature"],
            ["\"effect\"", "dynamic effect"],
        		["\"hs\"", "hue and saturation"],
        		["\"xy\"", "CIE xy color space coordinates"]
        	],
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x4001",
            "eval": "if (Item.val !== 'effect') Item.val = ['hs', 'xy', 'ct', 'xy'][Attr.val]"
          },
          "read": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": ["0x4001", "0x4002", "0x4000", "0x0001"]
          },
          "refresh.interval": 60
        },
        {
          "name": "state/effect",
          "values": [
            ["\"none\"", "no effect is active"],
            ["\"colorloop\"", "colorloop through hue values"],
            ["\"candle\"", "candlelight dynamic effect"],
            ["\"fireplace\"", "fireplace dynamic effect"],
            ["\"loop\"", "colorloop dynamic effect"]
          ],
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x4002",
            "eval": "if (Item.val === 'none' || Item.val === 'colorloop') Item.val = Attr.val ? 'colorloop' : 'none'"
          },
          "read": { "fn": "none" }
        },
        {
          "name": "state/hue",
          "read": { "fn": "none" }
        },
        {
          "name": "state/sat",
          "read": { "fn": "none" }
        },
        {
          "name": "state/reachable"
        }
      ]
    }
  ],
  "bindings": [
    {
      "bind": "unicast",
      "src.ep": 11,
      "cl": "0xfc03",
      "report": [{ "mf": "0x100b", "at": "0x0002", "dt": "0x41", "min": 1, "max": 300 }]
    }
  ]
}
