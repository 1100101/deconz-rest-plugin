{
  "schema": "devcap1.schema.json",
  "manufacturername": ["$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY"],
  "modelid": ["LCA006", "LCE002", "LCG002", "LCL003", "LCX004"],
  "product": "Hue white and color ambiance (Zigbee 3)",
  "sleeper": false,
  "status": "Gold",
  "subdevices": [
    {
      "type": "$TYPE_EXTENDED_COLOR_LIGHT",
      "restapi": "/lights",
      "uuid": [
        "$address.ext",
        "0x0b"
      ],
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion"
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "config/colorcapabilities",
          "parse":
          {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x400a",
            "eval": "Item.val = Attr.val"
          },
          "read": { "fn": "none" }
        },
        {
          "name": "config/colorgamuttype",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x0032",
            "eval": "Item.val = Attr.val === 45317 ? 'C' : Attr.val === 44236 ? 'B' : Attr.val === 46138 ? 'A' : null"
          },
          "read": { "fn": "zcl", "ep": 0, "cl": "0x0300", "at": ["0x0032", "0x400a", "0x400b", "0x400c"] },
          "refresh.interval": 86400
        },
        {
          "name": "config/ctmax",
          "parse":
          {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x400c",
            "eval": "Item.val = Attr.val"
          },
          "read": { "fn": "none" }
        },
        {
          "name": "config/ctmin",
          "parse":
          {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x400b",
            "eval": "Item.val = Attr.val"
          },
          "read": { "fn": "none" }
        },
        {
          "name": "config/startup_bri"
        },
        {
          "name": "config/startup_ct"
        },
        {
          "name": "config/startup_on"
        },
        {
          "name": "config/startup_x",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "mf": "0x100b", "at": "0x0003",
            "eval": "Item.val = Attr.val"
          },
          "read": { "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "mf": "0x100b", "at": ["0x0003", "0x0004"] },
          "refresh.interval": 86400
        },
        {
          "name": "config/startup_y",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "mf": "0x100b", "at": "0x0004",
            "eval": "Item.val = Attr.val"
          },
          "read": { "fn": "none" }
        },
        {
         "name": "state/alert"
        },
        {
          "name": "state/bri",
          "read": { "fn": "none" }
        },
        {
          "name": "state/colormode",
          "parse": { "fn": "none" },
          "read": { "fn": "none" }
        },
        {
          "name": "state/ct",
          "read": { "fn": "none" }
        },
        {
          "name": "state/effect",
          "parse":
          {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x4002",
            "eval": "if (Item.val === 'none' || Item.val === 'colorloop') Item.val = Attr.val ? 'colorloop' : 'none'"
          },
          "read": { "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": ["0x4002"] },
          "refresh.interval": 60
        },
        {
          "name": "state/on",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002",
            "script": "fc03_state.js"
          },
          "read": { "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002" },
          "refresh.interval": 305
        },
        {
          "name": "state/reachable"
        },
        {
          "name": "state/x",
          "read": { "fn": "none" }
        },
        {
          "name": "state/y",
          "read": { "fn": "none" }
        }
      ]
    }
  ],
  "bindings": [
    {
      "bind": "unicast",
      "src.ep": 11,
      "cl": "0xfc03",
      "report": [{ "mf": "0x100b", "at": "0x0002", "dt": "0x41", "min": 1, "max": 300 }]
    }
  ]
}
