{
  "schema": "devcap1.schema.json",
  "manufacturername": [
    "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY",
    "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY",
    "$MF_SIGNIFY", "$MF_SIGNIFY", "$MF_SIGNIFY"
  ],
  "modelid": [
    "LCT001", "LCT002", "LCT003", "LCT007", "LCT010",
    "LCT011", "LCT012", "LCT014", "LCT015", "LCT016",
    "LLC020", "LLM001", "LST002"
  ],
  "product": "Hue white and color ambiance light (ZLL)",
  "sleeper": false,
  "status": "Gold",
  "subdevices": [
    {
      "type": "$TYPE_EXTENDED_COLOR_LIGHT",
      "restapi": "/lights",
      "uuid": [
        "$address.ext",
        "0x0b"
      ],
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion"
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "cap/alert/trigger_effect"
        },
        {
          "name": "cap/bri/move_with_onoff"
        },
        {
          "name": "cap/color/capabilities",
          "read": {
            "fn": "zcl", "ep": 0, "cl": "0x0300", "at": ["0x400a", "0x400b", "0x400c", "0x4010"]
          },
          "refresh.interval": 86400
        },
        {
          "name": "cap/color/ct/computes_xy"
        },
        {
          "name": "cap/color/ct/max"
        },
        {
          "name": "cap/color/ct/min"
        },
        {
          "name": "cap/color/ct/max"
        },
        {
          "name": "cap/color/ct/min"
        },
        {
          "name": "cap/color/gamut_type"
        },
        {
          "name": "cap/color/xy/blue_x"
        },
        {
          "name": "cap/color/xy/blue_y"
        },
        {
          "name": "cap/color/xy/green_x"
        },
        {
          "name": "cap/color/xy/green_y"
        },
        {
          "name": "cap/color/xy/red_x"
        },
        {
          "name": "cap/color/xy/red_y"
        },
        {
          "name": "cap/on/off_with_effect"
        },
        {
          "name": "config/bri/startup"
        },
        {
          "name": "config/color/ct/startup",
          "read": { "fn": "none" }
        },
        {
          "name": "config/color/xy/startup_x"
        },
        {
          "name": "config/color/xy/startup_y"
        },
        {
          "name": "config/on/startup"
        },
        {
         "name": "state/alert"
        },
        {
          "name": "state/on",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002",
            "script": "fc03_state.js"
          },
          "read": { "fn": "zcl", "ep": "0x0b", "cl": "0xfc03", "mf": "0x100b", "at": "0x0002" },
          "refresh.interval": 5
        },
        {
          "name": "state/bri",
          "read": { "fn": "none" }
        },
        {
          "name": "state/ct",
          "read": { "fn": "none" }
        },
        {
          "name": "state/x",
          "read": { "fn": "none" }
        },
        {
          "name": "state/y",
          "read": { "fn": "none" }
        },
        {
          "name": "state/colormode",
          "parse": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": "0x4001",
            "eval": "Item.val = ['hs', 'xy', 'ct', 'xy'][Attr.val]"
          },
          "read": {
            "fn": "zcl", "ep": "0x0b", "cl": "0x0300", "at": ["0x4001", "0x4002", "0x4000", "0x0001"]
          },
          "refresh.interval": 60
        },
        {
          "name": "state/effect",
          "read": { "fn": "none" }
        },
        {
          "name": "state/hue",
          "read": { "fn": "none" }
        },
        {
          "name": "state/sat",
          "read": { "fn": "none" }
        },
        {
          "name": "state/reachable"
        }
      ]
    }
  ]
}
